@model Bot.Aplicacao.ViewModels.UsuarioViewModel

@{
    Layout = null;
}
<html>

<head>
    <title>Login </title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
</head>

<body>
    <div class="section"></div>
    <main>
        <center>
            <div class="section"></div>
            <div class="section"></div>
            <div class="section"></div>
            <div class="section"></div>
            <div class="section"></div>

            <div class="container">
                <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                    <form class="col s12" asp-action="Login">
                        <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input asp-for="Email" class='validate' type='email' name='email' id='email' />
                                <label asp-for="Email" for='email'>E-mail</label>
                                <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input asp-for="Senha" class='validate' type='password' name='Senha' id='Senha' />
                                <label asp-for="Senha" for='Senha'>Senha</label>
                                <span asp-validation-for="Senha" class="red-text text-darken-4"></span>
                            </div>
                            <label style='float: right;'>
                                <a class='pink-text' href='#!'><b>Esqueceu a senha?</b></a>
                            </label>
                        </div>

                        <br />
                        <center>
                            <div class='row'>
                                <button asp-controller="Usuarios" asp-action="Login" type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Entrar</button>
                            </div>
                        </center>
                    </form>
                </div>
            </div>
        </center>

        <div class="section"></div>
        <div class="section"></div>
    </main>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>

</html>